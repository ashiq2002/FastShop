<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/laila</item>
    </style>

    <!-- text input layout custom theme -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="startIconTint">@color/grey</item>
        <item name="endIconTint">@color/grey</item>
        <item name="boxStrokeColor">@color/textInputLayoutColor</item>
        <item name="boxBackgroundColor">@color/textInputLayoutColor</item>
    </style>

    <!--Action bar style-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowContentOverlay">@null</item>
        <!--below line used to change the color of home(back) button color-->
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>
</resources>